<mx:WindowedApplication xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:AG="org.antigone.views.*"
	xmlns:controllers="org.antigone.controllers.*"
	layout="vertical" >
	
	<!-- Instance of the AppController -->
	<controllers:AppController id="appController" />
	
	<!-- Views stacked -->
	<mx:ViewStack id="viewstack" width="392" height="246">
		<AG:LoginView id="loginView" horizontalAlign="center" loginSucceeded="appController.loginSucceeded()" />
		<AG:DashboardView id="dashboardView" width="100%" height="100%" />
	</mx:ViewStack>
	
</mx:WindowedApplication>
