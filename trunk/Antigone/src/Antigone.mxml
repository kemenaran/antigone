<?xml version="1.0" encoding="utf-8"?>
<mx:WindowedApplication xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:views="org.antigone.views.*"
	xmlns:controllers="org.antigone.controllers.*"
	layout="vertical" >
	
	<!-- Instance of the AppController -->
	<controllers:AppController id="appController" />
	
	<!-- Views stacked -->
	
	<mx:ViewStack id="viewstack" height="100%" width="100%">
		<mx:HBox horizontalAlign="center">
			<views:UserFormsView id="loginView" loginSucceeded="appController.loginSucceeded()"/>
		</mx:HBox>
		<views:DashboardView id="dashboardView" width="100%" height="100%" />
	</mx:ViewStack>

</mx:WindowedApplication>
