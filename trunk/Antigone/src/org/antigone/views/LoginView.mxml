<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml">
	
	<mx:Script>
		<![CDATA[
			import org.antigone.controllers.LoginController;
			
			// We must associate the view with a controller
			public var controller:LoginController = new LoginController(this as LoginView);
		]]>
	</mx:Script>
	
	<!-- The main form goes here -->
	<mx:Form x="57" y="62" defaultButton="{loginButton}">
	        
		<mx:FormItem label="Identifiant">
			<mx:TextInput id="username" />
		</mx:FormItem>
		
		<mx:FormItem label="Mot de passe">
			<mx:TextInput id="password" displayAsPassword="true"/>
		</mx:FormItem>
		<mx:FormItem>
			<mx:Button id="loginButton" label="S'identifier" click="controller.LoginFormSubmitted()" />
		</mx:FormItem>
		<mx:Label id="loginErrorLabel" text="Identification incorrecte" color="#AD0101" visible="false" includeInLayout="false" />
		<mx:Label id="loginSuccessLabel" text="Identification réussie" color="#00AA2C" visible="false" includeInLayout="false" />
	</mx:Form>
	
	<!-- …and validate all stuff -->
	<mx:Validator source="{username}" property="text" required="true" />
	<mx:Validator source="{password}" property="text" required="true" />
	
</mx:Panel>
